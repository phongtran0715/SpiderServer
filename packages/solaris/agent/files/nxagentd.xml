<service_bundle type='manifest' name='RADnetxms:nxagentd'>
<service
        name='application/management/nxagentd'
        type='service'
        version='1'>

        <dependency
                name='network'
                grouping='require_all'
                restart_on='none'
                type='service'>
                <service_fmri value='svc:/milestone/network:default' />
        </dependency> 

        <dependency
                name='filesystem-local'
                grouping='require_all'
                restart_on='none'
                type='service'>
                <service_fmri value='svc:/system/filesystem/local:default' />
        </dependency> 

        <exec_method
                type='method'
                name='start'
                exec='/opt/netxms/svc/nxagentd start'
                timeout_seconds='60' />

        <exec_method
                type='method'
                name='stop'
                exec='/opt/netxms/svc/nxagentd stop'
                timeout_seconds='60' />

        <property_group name='general' type='framework'>
                <propval name='value_authorization' type='astring' value='solaris.smf.value.netxms' />
                <propval name='action_authorization' type='astring' value='solaris.smf.manage.netxms' />
        </property_group>

        <instance name='default' enabled='false'>
                <method_context>
                        <method_credential user='root' group='root' />
                </method_context>

                <property_group name='netxms' type='application'>
                        <propval name='bin' type='astring' value='/opt/netxms/bin' />
                        <!-- <propval name='agent_config' type='astring' value='' /> -->
                        <!-- <propval name='agent_debuglevel' type='integer' value='' /> -->
                        <propval name='value_authorization' type='astring' value='solaris.smf.value.netxms' />
                </property_group>
        </instance>

        <stability value='Evolving' />

        <template>
                <common_name>
                        <loctext xml:lang='C'>
                                NetXMS Agent
                        </loctext>
                </common_name>
                <documentation>
                        <manpage title='nxagentd' section='5' />
                        <doc_link name='netxms.org' uri='http://netxms.org' />
                </documentation>
        </template>
</service>
</service_bundle>

